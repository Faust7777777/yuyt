/* 全局样式 */
page {
  height: 100%;
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 通用按钮样式 */
button {
  border-radius: 8rpx;
  font-size: 28rpx;
}

button::after {
  border: none;
}

/* 输入框样式 */
input {
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
}
