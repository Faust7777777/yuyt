<view class="container">
  <view class="login-box">
    <text class="title">预约系统登录</text>

    <!-- 快速填充按钮 -->
    <view class="quick-fill">
      <button class="fill-btn student" bindtap="fillStudent">学生账号</button>
      <button class="fill-btn teacher" bindtap="fillTeacher">教师账号</button>
    </view>

    <!-- 角色选择 -->
    <view class="form-item">
      <text class="label">身份</text>
      <picker 
        mode="selector" 
        range="{{roleOptions}}"
        range-key="label"
        bindchange="onRoleChange">
        <view class="picker">
          {{role === 'teacher' ? '教师' : '学生'}}
        </view>
      </picker>
    </view>

    <!-- 用户名 -->
    <view class="form-item">
      <text class="label">用户名</text>
      <input 
        class="input" 
        placeholder="请输入用户名"
        value="{{username}}"
        bindinput="onUsernameInput" />
    </view>

    <!-- 密码 -->
    <view class="form-item">
      <text class="label">密码</text>
      <input 
        class="input" 
        type="password"
        placeholder="请输入密码"
        value="{{password}}"
        bindinput="onPasswordInput" />
    </view>

    <!-- 登录按钮 -->
    <button class="login-btn" bindtap="login">登录</button>

    <!-- 测试账号说明 -->
    <view class="tips">
      <text class="tip-title">测试账号:</text>
      <text class="tip-item">学生: student01 / 123456</text>
      <text class="tip-item">教师: teacher01 / 123456</text>
    </view>
  </view>
</view>
