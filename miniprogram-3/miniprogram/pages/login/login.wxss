.container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.login-box {
  width: 600rpx;
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0,0,0,0.1);
}

.title {
  display: block;
  text-align: center;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

.quick-fill {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.fill-btn {
  flex: 1;
  padding: 20rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
}

.fill-btn.student {
  background: #E3F2FD;
  color: #1976D2;
}

.fill-btn.teacher {
  background: #F3E5F5;
  color: #7B1FA2;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.input,
.picker {
  width: 100%;
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.login-btn {
  width: 100%;
  margin-top: 40rpx;
  padding: 28rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-size: 32rpx;
  border-radius: 12rpx;
  border: none;
}

.tips {
  margin-top: 40rpx;
  padding: 30rpx;
  background: #FFF3E0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-title {
  font-size: 28rpx;
  color: #E65100;
  font-weight: bold;
}

.tip-item {
  font-size: 24rpx;
  color: #FF6F00;
}
