.schedule {
  display: flex;
  flex-direction: column;
  min-width: max-content;
}

.row {
  display: flex;
  flex-direction: row;
}

.cell {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 20rpx;
  border: 1rpx solid #eee;
  min-width: 120rpx;
  min-height: 80rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.header-row .cell {
  background: #f8f9fa;
  font-weight: bold;
  color: #333;
}

.time-header {
  min-width: 180rpx;
  font-size: 30rpx;
}

.day-header {
  font-size: 30rpx;
  flex: 1;
}

.time-cell {
  background: #f8f9fa;
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
  min-width: 180rpx;
}

.slot-cell {
  background: #fafafa;
  color: #999;
  cursor: pointer;
  transition: all 0.3s;
  flex: 1;
}

