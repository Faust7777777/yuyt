.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 顶部标题 */
.header {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  padding: 40rpx 30rpx 30rpx;
  color: white;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 周切换 */
.week-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background: white;
  margin: 20rpx 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.week-btn {
  padding: 12rpx 30rpx;
  font-size: 28rpx;
  background: #4facfe;
  color: white;
  border: none;
  border-radius: 8rpx;
}

.week-btn[disabled] {
  background: #e0e0e0;
  color: #999;
}

.week-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 预约列表 */
.appointments-list {
  padding: 0 30rpx 30rpx;
  height: calc(100vh - 300rpx);
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.3;
}

.empty-text {
  display: block;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 预约卡片 */
.appointment-card {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.student-info {
  display: flex;
  flex-direction: column;
}

.student-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.student-id {
  font-size: 24rpx;
  color: #999;
}

.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.status-confirmed {
  background: #e8f5e9;
  color: #4caf50;
}

.status-pending {
  background: #fff3e0;
  color: #ff9800;
}

.card-body {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.info-row {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.label {
  color: #999;
  width: 100rpx;
  flex-shrink: 0;
}

.value {
  color: #333;
  font-weight: 500;
}
